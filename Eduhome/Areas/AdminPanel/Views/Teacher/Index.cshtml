@{
    List<Teacher> teachers = Model;
}

<div class="content-wrapper">
    <div class="row">
        <div class="grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Teachers</h4>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Image url</th>
                                    <th>Occupation</th>
                                    <th>About</th>
                                    <th>Degree</th>
                                    <th>Experience</th>
                                    <th>Faculty</th>
                                    <th>Mail</th>
                                    <th>Phone</th>
                                    <th>Skype</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in teachers)
                                {
                                    <tr>
                                        <th>@item.Name</th>
                                        <th>@item.ImageUrl</th>
                                        <th>@item.Occupation</th>
                                        <th>@item.About</th>
                                        <th>@item.Degree</th>
                                        <th>@item.Experience</th>
                                        <th>@item.Faculty</th>
                                        <th>@item.Mail</th>
                                        <th>@item.Phone</th>
                                        <th>@item.Skype</th>
                                        <td>
                                            <a class="btn btn-primary" asp-action="details" asp-route-id="@item.Id">Details</a>
                                            <a class="btn btn-success" asp-action="update" asp-route-id="@item.Id">Update</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>