@{
    List<Event> events = Model;
}

<div class="content-wrapper">
    <div class="row">
        <div class="grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Events</h4>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Date</th>
                                    <th>Start time</th>
                                    <th>End time</th>
                                    <th>Venue</th>
                                    <th>Description</th>
                                    <th>Image url</th>
                                    <th>Category</th>
                                    <th>Speakers</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in events)
                                {
                                    <tr>
                                        <th>@item.Name</th>
                                        <th>@item.Date</th>
                                        <th>@item.StartTime</th>
                                        <th>@item.EndTime</th>
                                        <th>@item.Venue</th>
                                        <th>@item.Description</th>
                                        <th>@item.ImageUrl</th>
                                        <th>@item.Category.Name</th>
                                        <th>
                                            @foreach (var eventSpeaker in item.EventSpeakers)
                                            {
                                                @eventSpeaker.Speaker.Name
                                            }
                                        </th>
                                        <td>
                                            <a class="btn btn-primary" asp-action="details" asp-route-id="@item.Id">Details</a>
                                            <a class="btn btn-success" asp-action="update" asp-route-id="@item.Id">Update</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>