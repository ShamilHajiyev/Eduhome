<!-- Event Area Start -->
<div class="event-area one text-center pt-140 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title">
                    <img src="~/img/icon/section.png" alt="section-title">
                    <h2>UPCOMING EVENTS</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @{
                var isEven = true;
            }
            @foreach (var item in events)
            {
                @if (isEven)
                {
                    <div class="col-md-6 col-sm-12 col-xs-12">
                        <div class="single-event mb-35">
                            <div class="event-date">
                                <h3>
                                    <a asp-controller="event" asp-action="details" asp-route-id="@item.Id">
                                        @item.Date.Day
                                        <span>@item.Date.ToString("MMMM")</span>
                                    </a>
                                </h3>
                            </div>
                            <div class="event-content text-left">
                                <div class="event-content-left">
                                    <h4><a asp-controller="event" asp-action="details" asp-route-id="@item.Id">@item.Name</a></h4>
                                    <ul>
                                        <li><i class="fa fa-clock-o"></i>@item.StartTime.ToShortTimeString() - @item.EndTime.ToShortTimeString()</li>
                                        <li><i class="fa fa-map-marker"></i>@item.Venue</li>
                                    </ul>
                                </div>
                                <div class="event-content-right">
                                    <a class="default-btn" asp-controller="event" asp-action="details" asp-route-id="@item.Id">join now</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    isEven = false;
                }
                else
                {
                    <div class="col-md-6 hidden-sm hidden-xs">
                        <div class="single-event mb-35">
                            <div class="event-date">
                                <h3>
                                    <a asp-controller="event" asp-action="details" asp-route-id="@item.Id">
                                        @item.Date.Day
                                        <span>@item.Date.ToString("MMMM")</span>
                                    </a>
                                </h3>
                            </div>
                            <div class="event-content text-left">
                                <div class="event-content-left">
                                    <h4><a asp-controller="event" asp-action="details" asp-route-id="@item.Id">@item.Name</a></h4>
                                    <ul>
                                        <li><i class="fa fa-clock-o"></i>@item.StartTime.ToShortTimeString() - @item.EndTime.ToShortTimeString()</li>
                                        <li><i class="fa fa-map-marker"></i>@item.Venue</li>
                                    </ul>
                                </div>
                                <div class="event-content-right">
                                    <a class="default-btn" asp-controller="event" asp-action="details" asp-route-id="@item.Id">join now</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    isEven = true;
                }
            }
        </div>
    </div>
</div>
