@{
    AboutViewModel aboutViewModel = Model;
    var viewCourse = aboutViewModel.ViewCourse;
    var videoTourLink = aboutViewModel.VideoTourLink;
    var teachers = aboutViewModel.Teachers;
}

@await Component.InvokeAsync("Header")
<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>about us</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
